.offer-container
  .offer-image
    /= image_tag(@offer.image_url)
    = image_tag("http://res.cloudinary.com/buynance/image/upload/dineabite/BurgerScaled.png")
  .offer-body
    .offer-body-subtitle
      .offer-body-subtitle-short-description
        %span 
          /= @offer.short_description
          Valid Weekdays: $25 for $50 at
      .offer-body-subtitle-business-name
        %span 
          /= @offer.business.name
          Maries Italian Kitchen
    .offer-body-border
    .offer-body-price.clearfix
      .offer-body-price-amount{style: "text-align: center;"}
        %span.offer-body-price-amount-old{style: "color: rgb(191, 191, 191); margin-right: 0.3em;text-decoration: line-through;"} $50 
        %span.offer-body-price-amount-new $25!
  .offer-description
    .offer-body-discount
      %span 
        = "Checkout"
    .offer-body-checkout{style: "background-color: white;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span Full Name
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "John Doe", style: "text-align: center; ", id: "fullname-input"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span Address
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "131 Main Street", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span City
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "New York", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span State
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "New York", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span Zip Code
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "10001", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span Credit Card Number
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "4485669971705437", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span Expiration Date:
        .offer-body-checkout-section-input
          %input{:name => "bday", :type => "text", value: "11/2018", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span CVV Number
        .offer-body-checkout-section-input
          %input{:name => "fullname", :type => "text", value: "182", style: "text-align: center;"}
      .offer-body-checkout-section.clearfix
        .offer-body-checkout-section-label
          %span E-mail
        .offer-body-checkout-section-input
          %input{:name => "email", :type => "email", value: "jdoe@jdoebusiness.com", style: "text-align: center;"}
      .offer-body-checkout-submit
        .offer-body-checkout-submit-button
          %a{href: "#invitepage", id: "redemption-alert"} Confirm
